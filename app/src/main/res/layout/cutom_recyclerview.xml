<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_layout"
    android:layout_gravity="center"
    android:background="@color/white"
    >

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="8dp"
        android:background="@drawable/shadow">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

       <TextView
           android:id="@+id/jobTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Web Developer"
           android:textSize="18dp"
           android:background="@drawable/round_text"
           android:textColor="@color/black"
           android:layout_margin="5dp"
           android:padding="10dp"
           />
       <TextView
           android:id="@+id/companyName"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="15dp"
           android:padding="5dp"
           android:text="Virtual Echos IT Firm"
           android:textColor="@color/black"
           android:textSize="12dp"
           android:layout_marginLeft="12dp"/>


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">


        <TextView
            android:id="@+id/jobNature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job-Nature: Full-Time"
            android:textSize="12dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/experience"
            android:layout_margin="10dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/experienceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-3 Years"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:layout_marginLeft="-15dp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/location"
            android:layout_marginLeft="50dp"
            android:layout_gravity="right|center"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/jobLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhaka, Bangladesh"
            android:layout_gravity="left|center"
            android:textSize="10dp"
            android:layout_marginLeft="-5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:text="Salary: 20k"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/workedTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HTML,CSS,Bootstarp,MySQL and Laravel"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"
            android:padding="5dp"/>
    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>